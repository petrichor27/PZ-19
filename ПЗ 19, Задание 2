#include <iostream>
#include <fstream>
using namespace std;

bool Sochet(int* res, int n, int k)
{
	for (int i = k - 1; i >= 0; i--)
		if (res[i] < n - k + i)
		{
			res[i]++;
			for (int j = i + 1; j < k; j++)
				res[j] = res[j - 1] + 1;
			return true;
		}
	return false;
}
int main()
{
	setlocale(LC_ALL, "RUS");
	ofstream fout("OUTPUT.txt");
	int p, q;
	cout << "Введите p:";
	cin >> p;// кол-во вершин
	q = p * (p - 1) / 2;// кол-во ребер
	int* res = new int[p];//массив  
	for (int i = 0; i < p; i++)
		res[i] = i;
	int** reb = new int* [q];
	for (int i = 0; i < q; i++)
		reb[i] = new int[2];
	if (p >= 2)
	{
		int num = 0;
		do
		{
			for (int i = 0; i < 2; i++)
				reb[num][i] = res[i];
			num++;
		} while (Sochet(res, p, 2));
	}
	int* res1 = new int[q];
	bool** ms = new bool* [p];//матрица смежности
	for (int i = 0; i < p; i++)
		ms[i] = new bool[p];
	int num = 0;
	for (int t = 0; t <= q; t++)
	{
		for (int i = 0; i < q; i++)
			res1[i] = i;
		if (q >= t)
		{
			do
			{
				for (int i = 0; i < p; i++)
					for (int j = 0; j < p; j++)
						ms[i][j] = 0;
				fout << num + 1 << ")\n";
				for (int i = 0; i < t; i++)
				{
					ms[reb[res1[i]][0]][reb[res1[i]][1]] = 1;
					ms[reb[res1[i]][1]][reb[res1[i]][0]] = 1;
				}
				for (int i = 0; i < p; i++)
				{
					for (int j = 0; j < p; j++)
						fout << ms[i][j] << " ";
					fout << endl;
				}
				num++;
				fout << endl;
			} while (Sochet(res1, q, t));
		}
	}
	cout << "Было построено " << num << " матриц смежности вершин\n";
	fout.close();
	return 0;
}
